{
  "name": "react-dnd",
  "version": "1.0.2",
  "description": "A highly customizable, performant drag-and-drop system for React applications",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": "./dist/components/*",
    "./contexts/*": "./dist/contexts/*",
    "./hooks/*": "./dist/hooks/*",
    "./types/*": "./dist/types/*",
    "./utils/*": "./dist/utils/*"
  },
  "workspaces": [
    "examples"
  ],
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "examples:dev": "cd examples && npm run dev",
    "examples:start": "cd examples && npm start",
    "examples:build": "cd examples && npm run build",
    "validate": "npm run lint && npm run type-check && npm run test",
    "precommit": "npm run validate"
  },
  "keywords": [
    "react",
    "drag-and-drop",
    "typescript",
    "hooks",
    "performance",
    "customizable"
  ],
  "author": "ArendtDigital",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArendtDigital/react-dnd.git"
  },
  "bugs": {
    "url": "https://github.com/ArendtDigital/react-dnd/issues"
  },
  "homepage": "https://github.com/ArendtDigital/react-dnd#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-loader": "^10.0.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.0.0",
    "ts-jest": "^29.0.0",
    "tslib": "^2.6.0",
    "typescript": "^4.7.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
